<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE biblioteca [
    <!ELEMENT biblioteca (libro+)>
    <!ELEMENT libro (titulo, editorial, autor, paginas)>
    <!ELEMENT titulo (#PCDATA)>
    <!ELEMENT editorial (#PCDATA)>
    <!ELEMENT autor (nombre, apellidos)>
    <!ELEMENT nombre (#PCDATA)>
    <!ELEMENT apellidos (#PCDATA)>
    <!ELEMENT paginas (#PCDATA)>
]>
<biblioteca>
    <libro>
        <titulo>El Quijote</titulo>
        <editorial>Editorial EDAF</editorial>
        <autor>
            <nombre>Miguel</nombre>
            <apellidos>de Cervantes</apellidos>
        </autor>
        <paginas>1345</paginas>
    </libro>
    <libro>
        <titulo>Cien años de soledad</titulo>
        <editorial>Sudamericana</editorial>
        <autor>
            <nombre>Gabriel</nombre>
            <apellidos>García Márquez</apellidos>
        </autor>
        <paginas>471</paginas>
    </libro>
    <libro>
        <titulo>1984</titulo>
        <editorial>Secker & Warburg</editorial>
        <autor>
            <nombre>George</nombre>
            <apellidos>Orwell</apellidos>
        </autor>
        <paginas>328</paginas>
    </libro>
</biblioteca>

